ACC.footer = {

    _autoload: [
        "loadAccordion"
    ],

    loadAccordion: function () {
        $(".js-footer-col-accordion .footer__title").on("click", function () {
            if (document.documentElement.clientWidth < 769) {
                $(this).parent().toggleClass("is-show");
                $(this).parent().find(".footer__top__col__content").slideToggle();
            }
        })
    },
};
