ACC.departmentsgrid = {
    _autoload: [
        ["collapseAll", $(".departments-mobile-background").length > 0]
    ],

    collapseAll: function () {
        enquire.register("screen and (max-width:" + ACC.common.encodeHtml(screenXsMax) + ")", {
            setup: function () {
                $(".panel-title svg").css("display", "none");
            },
            match: function () {
                $(".panel-collapse").removeClass("in");
                $(".panel-title svg").css("display", "inline")
            },
            unmatch: function () {
                $(".panel-title svg").css("display", "none");
                $(".panel-collapse").addClass("in");
            }
        })
    }
};
